{

  "variables": {
    "source_image": "{{ env `IMG_TMP_ID` }}",
    "image_name": "{{ env `IMG_NAME` }}",
    "build_flavor": "16",
    "user": "cloud",
    "factory_network": "{{ env `NET_ID` }}",
    "factory_security_group_name": "{{env `SG_ID`}}",
    "ansible_dir": "{{ env `ANSIBLE_DIR` }}",
    "data": "sources/v2/packer/cloud-config.yaml"
  },


  "builders": [{
    "type": "openstack",
    "image_name": "{{ user `image_name` }}",
    "source_image": "{{ user `source_image` }}",
    "flavor": "16",
    "networks": "{{ user `factory_network` }}",
    "floating_ip_pool": "public",
    "security_groups": ["{{ user `factory_security_group_name` }}"],
    "ssh_username": "{{ user `user`}}",
    "user_data_file": "{{ user `data` }}"

  }
  ],
  "provisioners": [

    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "who > /tmp/test"
      ]
    },

    {
      "type": "ansible",
      "extra_arguments": ["-vvv"],
      "playbook_file": "{{ user `ansible_dir` }}/ubuntu.yml",
      "host_alias": "packer"

    }
  ]

}